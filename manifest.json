{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "version": "1.1",
    "description": "__MSG_extensionDescription__",
    "default_locale": "en",
    "permissions": [
        "activeTab",
        "storage",
        "cookies",
        "alarms"
    ],
    "host_permissions": [
        "https://cursor.com/*",
        "https://www.cursor.com/*",
        "https://addlivetag.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon48.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://cursor.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/js/chart.min.js"],
            "matches": ["https://cursor.com/*"]
        }
    ]
}